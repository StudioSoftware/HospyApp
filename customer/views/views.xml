<odoo>
  <data>
    <!-- explicit list view definition -->


    <record model="ir.ui.view" id="customer.list">
      <field name="name">customer list</field>
      <field name="model">customer.customer</field>
      <field name="arch" type="xml">
        <form>
          <div class="">
            <button name="%(renseignement.action_window)%d" type="action" />
          </div>
          <field name="name" />
          <field name="prenom" />
          <field name="genre" />
          <field name="age" />
          <field name="phone" />
          <field name="statut" />
          <field name="quartier" />
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="customer.action_window">
      <field name="name">customer window</field>
      <field name="res_model">customer.customer</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="customer.action_server">
      <field name="name">customer server</field>
      <field name="model_id" ref="model_customer_customer"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Patients" id="customer.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="customer.menu_1" parent="customer.menu_root"/>
    <menuitem name="Menu 2" id="customer.menu_2" parent="customer.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="customer.menu_1_list" parent="customer.menu_1"
              action="customer.action_window"/>
    <menuitem name="Server to list" id="customer" parent="customer.menu_2"
              action="customer.action_server"/>

  </data>
</odoo>