<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="assurances.list">
      <field name="name">Gestion des assurances</field>
      <field name="model">assurances.assurances</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
          <field name="code"/>
          <field name="RCCM"/>
          <field name="date" readonly="1" />
          <field name="phone1" type="Tel" />
          <field name="phone2" type="Tel" />
          <field name="email" type="email" widget="email" />
          <field name="region" />
          <field name="image" widget="image" class="oe_avatar" />
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="assurances.action_window">
      <field name="name">Gestion des assurances</field>
      <field name="res_model">assurances.assurances</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- actions opening views on models infirmier -->

    <record model="ir.actions.act_window" id="infirmiere.action_window">
      <field name="name">Gestion des infirmier</field>
      <field name="res_model">infirmiere.infirmiere</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="assurances.action_server">
      <field name="name">assurances server</field>
      <field name="model_id" ref="model_assurances_assurances"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->
    <menuitem name="Assurances" id="assurances.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Assurances" id="assurances.menu_1" parent="assurances.menu_root"/>
    <menuitem name="Services" id="assurances.menu_2" parent="assurances.menu_root"/>
    <menuitem name="Infirmieres" id="assurances.menu_3" parent="assurances.menu_root"/>

    <!-- actions -->
    <menuitem name="Liste des assurances" id="assurances.menu_1_list" parent="assurances.menu_1"
              action="assurances.action_window"/>
    <menuitem name="Server to list" id="assurances" parent="assurances.menu_2"
              action="assurances.action_server"/>
  </data>
</odoo>